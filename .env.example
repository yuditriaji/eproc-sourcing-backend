# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"
# MongoDB (Atlas or local). For local dev, default is mongodb://localhost:27017/eproc_documents
MONGODB_URL="mongodb://localhost:27017/eproc_documents"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-chars"
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYour-Public-Key-Here\n-----END PUBLIC KEY-----"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-min-32-chars"
JWT_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# Encryption
ENCRYPTION_KEY="your-32-byte-encryption-key-here"
CRYPTO_SALT_ROUNDS=12

# Kafka Configuration (Optional)
KAFKA_BROKERS="localhost:9092"
KAFKA_CLIENT_ID="eproc-sourcing-backend"
KAFKA_GROUP_ID="eproc-sourcing-group"

# Camunda Configuration (Optional)
CAMUNDA_ZEEBE_BROKER="localhost:26500"
CAMUNDA_CLIENT_ID="eproc-client"
CAMUNDA_CLIENT_SECRET="eproc-secret"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Security Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT_ADMIN=100
THROTTLE_LIMIT_USER=50
THROTTLE_LIMIT_VENDOR=10

# OWASP Security
CSP_POLICY="default-src 'self'"
X_FRAME_OPTIONS="DENY"
X_CONTENT_TYPE_OPTIONS="nosniff"

# Go Microservice (Optional)
GO_SCORING_SERVICE_URL="localhost:9090"
GRPC_SCORING_SERVICE_URL="localhost:50051"

# File Storage
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,jpg,png"

# Monitoring and Logging
LOG_LEVEL="info"
AUDIT_LOG_RETENTION_DAYS=365
ELK_STACK_URL="http://localhost:9200"

# Application Configuration
NODE_ENV="production"
PORT=3000
API_PREFIX="api/v1"

# CORS Configuration
CORS_ORIGIN="https://your-frontend-domain.com"
CORS_CREDENTIALS=true
FRONTEND_URL="https://your-frontend-domain.com"